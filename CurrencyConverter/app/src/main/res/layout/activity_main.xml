<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:autofillHints="@string/enter_no"
                android:hint="@string/enter_no"
                android:textStyle="bold"
                android:inputType="number"
                android:textColor="#FF0057" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:padding="20dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#B10640" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_layout"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_russia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@drawable/btn_design"
            android:padding="10sp"
            android:text="@string/convert_to_russian_currency"
            android:textAllCaps="true"
            android:textColor="#F40CC9" />

        <Button
            android:id="@+id/btn_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@drawable/btn_design"
            android:padding="10sp"
            android:text="@string/convert_to_us_currency"
            android:textAllCaps="true"
            android:textColor="#F40CC9" />


    </LinearLayout>

</RelativeLayout>